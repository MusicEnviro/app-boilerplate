{
	"name": "app-boilerplate",
	"version": "0.1.0",
	"private": true,
	"homepage": "./",
	"build": {
		"appId": "com.electron.electron-with-create-react-app",
		"win": {
			"icon": "https://cdn2.iconfinder.com/data/icons/designer-skills/128/react-256.png"
		},
		"directories": {
			"buildResources": "public"
		}
	},
	"main": "src/start.js",
	"dependencies": {
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-scripts": "3.4.1",
		"typescript": "^3.7.5"
	},
	"devDependencies": {
		"electron-builder": "^22.4.1",
		"electron-debug": "^3.0.1",
		"electron": "^8.2.0",
		"@types/chai": "^4.2.11",
		"@types/jest": "^24.9.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^12.12.32",
		"@types/react": "^16.9.26",
		"@types/react-dom": "^16.9.5",
		"chai": "^4.2.0",
		"mocha": "^10.2.0",
		"prettier": "^2.0.2",
		"ts-mocha": "^7.0.0",
		"ts-node": "^8.8.2"
	},
	"scripts": {
		"start": "react-scripts start",
		"build": "react-scripts build",
		"electron-start": "nf start -p 3000",
		"electron": "electron .",
		"test": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' ts-mocha **/*.spec.ts",
		"dist": "npm run build && electron-builder ./build",
		"postinstall": "echo '(disabled) install-app-deps'"
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
